<%- include ('template/header'); -%>

<div class='container'>

        <h1 style='text-align:center;'> AUTHOR </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='btn-primary'onclick='location.href="/";'>Back</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
    
    <h3>Quotes from the author(s)</h3>
    <ul>
        <%quotes.forEach(function(q){%>
            <li><%=q.quote%> - <a href='/author/<%=q.firstName%> <%=q.lastName%>'><%=q.firstName%> <%=q.lastName%></a></li>
        <%});%>
    </ul>
</div>

